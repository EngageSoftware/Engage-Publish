(
	[ItemVersionId]
	, [ItemID]
	, [SortOrder]
	, [ChildDisplayTabId]
	)
 VALUES 
	( 
	@ItemVersionId 
	, @ItemId 
	, @SortOrder
	, @ChildDisplayTabId
	)

GO



